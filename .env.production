# CAI Framework - Production Environment Configuration
# Version: 0.5.3-ml

# Application Settings
CAI_ENV=production
CAI_VERSION=0.5.3-ml
CAI_LOG_LEVEL=INFO

# Model Configuration
CAI_MODEL=gemini/gemini-2.5-flash
CAI_MODEL_TEMPERATURE=0.7
CAI_MODEL_MAX_TOKENS=8192

# Machine Learning Settings
CAI_ML_ENGINE_ENABLED=true
CAI_ML_MODEL_DIR=/opt/cai/data/ml_models
CAI_ML_TRAINING_INTERVAL=3600
CAI_ML_MIN_SAMPLES_PER_CLASS=5
CAI_ML_CONFIDENCE_THRESHOLD=0.8

# Security Settings
CAI_SECURITY_MODE=strict
CAI_ENABLE_DANGEROUS_TOOLS=false
CAI_MAX_CONCURRENT_AGENTS=5

# Database and Storage
CAI_DATA_DIR=/opt/cai/data
CAI_LOG_DIR=/opt/cai/logs
CAI_CONFIG_DIR=/opt/cai/config

# Network Configuration
CAI_BIND_ADDRESS=0.0.0.0
CAI_PORT=8080
CAI_TIMEOUT=300

# Resource Limits
CAI_MAX_MEMORY_USAGE=3G
CAI_MAX_CPU_USAGE=80
CAI_MAX_FILE_SIZE=100M

# Monitoring and Health
CAI_HEALTH_CHECK_ENABLED=true
CAI_METRICS_ENABLED=true
CAI_PERFORMANCE_MONITORING=true

# Features
CAI_CONTINUOUS_LEARNING=true
CAI_ADVANCED_REASONING=true
CAI_PARALLEL_EXECUTION=true
CAI_SESSION_MANAGEMENT=true
